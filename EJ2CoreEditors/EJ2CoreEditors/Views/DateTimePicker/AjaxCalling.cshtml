@model EJ2CoreEditors.Controllers.DateTimePicker.DateTimePickerAjax
<h3> Ajax Sample: </h3>
<h5>This sample demonstrates the DateTimePicker using the Ajax to post the values.</h5>
<br />
<div class=" control-section">
    <div id="wrapper" class="datetimepicker-section">
        <div id="datetimepicker-control">
            <form method="post">
                <ejs-datetimepicker id="datetimepicker" name="value" value="@Model.value" placeholder="Choose a date and time" width="300px"></ejs-datetimepicker>
                <div id="submitbutton">
                    <ejs-button id="submitButton" content="Submit"></ejs-button>
                </div>
            </form>
        </div>
    </div>
</div>
<script>
    function onChange() {
        var date = this.value;
        var url = "/DateTimePicker/AjaxCalling/PostValue /";
        $.ajax({
            url: "/DateTimePicker/AjaxCalling/PostValue",
            data: JSON.stringify({ value: date }),
            type: "POST",
            contentType: "application/json",
            dataType: "JSON",
            success: function (result) {
                console.log(result)
            },
        });
    }
</script>
<style>
    #date_label {
        display: block;
        width: 248px;
        color: rgba(0, 0, 0, 0.58);
        margin-left: 5px;
    }

    #datetimepicker-control {
        max-width: 300px;
        margin: 0 auto;
    }

    #wrapper {
        max-width: 246px;
        margin: 0px auto;
    }

    #submitbutton {
        margin: 10px auto;
        text-align: center;
    }
</style>