<ejs-sidebar id="default-sidebar1" type="Over" width="100%">
    <e-content-template>
        <div class="titles1"> Menu </div>
        <div class="closebutton">
            <ejs-button id="close1" content="Close Sidebar" cssClass="e-btn close-button" iconCss="e-icons close-icon"></ejs-button>
        </div>
        <div id="listcontainer1">
            <ejs-listview id="list1" dataSource="ViewBag.dataSource"> </ejs-listview>
        </div>
        <div class="sub-title1">
            * ListView component is placed inside the sidebar content area.
        </div>
    </e-content-template>
</ejs-sidebar>
<div>
    <div class="titles2">Main content</div>
    <div class="sub-title1"> Click the button to open/close the Sidebar.</div>
    <div style="padding:20px" class="center-align">
        <ejs-button id="toggle1" content="Toggle Sidebar" cssClass="e-info"></ejs-button>
    </div>
</div>

<script type="text/javascript">
        document.addEventListener('DOMContentLoaded', function () {

            document.getElementById('toggle1').onclick = function () {
                var defaultSidebar = document.getElementById("default-sidebar1").ej2_instances[0];
                defaultSidebar.toggle();
            }
            // Close the sidebar
            document.getElementById('close1').onclick = function () {
                var defaultSidebar = document.getElementById("default-sidebar1").ej2_instances[0];
                defaultSidebar.hide();
            }
        });
</script>
